<Page x:Class="PracticTaxi.Pages.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticTaxi.Pages"
      mc:Ignorable="d" 
        MinHeight="450" MinWidth="700" MaxHeight="450" MaxWidth="700" Background="White"
  Title="Admin">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" Grid.Column="0">
            <Button x:Name="btnorder" Height="30" Content="Заказы" FontSize="16" Margin="10" Click="btnorder_Click"/>
            <Button x:Name="btnusers" Height="30" Content="Пользователи" FontSize="16" Margin="10" Click="btnusers_Click"/>
            <Button x:Name="btnschedule" Height="30" Content="Расписание водителей" FontSize="16" Margin="10" Click="btnschedule_Click"/>
        </StackPanel>
    </Grid>
</Page>
